        // --- PLANET LIST (Top to Down) ---
        const planetOrder = [
            "Proxima Centauri b", "TRAPPIST-1e", "Kepler-186f", "WASP-12b", "HD 209458 b",
            "Gliese 581 g", "CoRoT-7b", "51 Pegasi b", "Kepler-22b", "HD 189733 b",
            "PSR B1257+12 System", "Kepler-16b", "Gliese 667 Cc", "55 Cancri e", "Kepler-452b",
            "OGLE-2005-BLG-390Lb", "WASP-17b", "HR 8799 e", "Kepler-10b", "Kepler-11f",
            "Kepler-90g", "Gliese 436 b", "HAT-P-11b", "WASP-33b", "Kepler-138 c",
            "Kepler-1410b", "Kepler-93b", "HD 80606 b", 
            "Gliese 1132 b (GJ 1132 b)", "K2-18 b", "VHS 1256 b", "LTT 1445 Ab", 
            "PDS 70 c", "WASP-103 b", "Gliese 357 d (GJ 357 d)", "HR 5183 b", 
            "Kepler-1649 c", "TOI-1349 b", "Gliese 357 b (GJ 357 b)", "Kepler-7 b"
        ];

        const listContainer = document.getElementById('planet-list');
        const detailsContainer = document.getElementById('result-content');
        const searchInput = document.getElementById('search-filter');
        const aiInput = document.getElementById('ai-query-input');
        const aiOutput = document.getElementById('ai-result-content');
        let currentActiveItem = null; 

        // Function to format mass/radius units using LaTeX-like notation
        function formatUnit(value) {
            return value.replace(/M_Earth/g, 'M$_{\\text{Earth}}$').replace(/M_Jupiter/g, 'M$_{\\text{Jupiter}}$').replace(/R_Earth/g, 'R$_{\\text{Earth}}$').replace(/R_Jupiter/g, 'R$_{\\text{Jupiter}}$').replace(/\(Est.\)/g, '<span style="font-weight:400; font-size: 0.9em;">(Est.)</span>');
        }

        /**
         * Renders the details of a selected planet.
         */
        function renderPlanetDetails(planetKey) {
            const data = planetData[planetKey];
            if (!data) return;

            detailsContainer.innerHTML = `
                <p class="exoplanet-name">${data.name}</p>
                <span class="planet-status ${data.statusClass}">${data.classification}</span>
                
                <h3>Discovery & Host Star</h3>
                <p><strong>Discovery Method:</strong> ${data.source}</p>
                <p><strong>Host Star:</strong> ${data.hostStar}</p>
                <p><strong>Data Confidence:</strong> ${data.confidence}</p>

                <h3>Physical Parameters (Simulated)</h3>
                <p><strong>Simulated Mass:</strong> ${formatUnit(data.mass)}</p>
                <p><strong>Simulated Radius:</strong> ${formatUnit(data.radius)}</p>
                <p><strong>Orbital Period:</strong> ${data.period}</p>

                <h3>Key Feature Analysis</h3>
                <p>${data.keyFeature}</p>
            `;
        }

        /**
         * Filters the planet list.
         */
        function filterPlanetList() {
            const filterValue = searchInput.value.toLowerCase();
            const listItems = listContainer.getElementsByTagName('li');

            Array.from(listItems).forEach(li => {
                const text = li.textContent.toLowerCase();
                if (text.includes(filterValue)) {
                    li.style.display = '';
                } else {
                    li.style.display = 'none';
                }
            });
        }
        
        // --- AI KNOWLEDGE BASE (Updated with User-Provided Data) ---
        const aiKnowledgeBase = {
            "exoplanet": `
                <span style="color: #ffcc00; font-weight: 700;">[EXOPLANET DATA RETRIEVED]</span><br>
                An **exoplanet**, or extrasolar planet, is any planet located outside of our Solar System, orbiting stars other than our Sun.
                <br><br>
                **Status:** More than 6,000 have been confirmed, with scientists estimating there are **billions** in our galaxy alone.
                <br>
                **Types:** They come in a variety of types, including **Gas Giants**, **Neptunian planets**, **Super-Earths** (rocky and larger than Earth), and **Terrestrial planets** (rocky, Earth-sized worlds). Some, called **rogue planets**, are untethered to any star.
                <br>
                **Purpose:** The search for exoplanets in the **habitable zone** (where liquid water could exist) is central to the search for extraterrestrial life.
            `,
            "solar system": `
                <span style="color: #ffcc00; font-weight: 700;">[SOLAR SYSTEM DATA RETRIEVED]</span><br>
                A **Solar System** is a specific type of planetary system consisting of a star (the Sun) and all the celestial objects gravitationally bound to it, including eight confirmed planets, moons, asteroids, comets, and dust.
                <br><br>
                **Formation:** It formed about 4.6 billion years ago from the collapse of a dense region of a molecular cloud.
                <br>
                **Structure:** Planets are divided into the **Inner Solar System** (four smaller, rocky terrestrial planets) and the **Outer Solar System** (four larger gas giants and ice giants).
            `,
            "galaxy": `
                <span style="color: #ffcc00; font-weight: 700;">[GALAXY DATA RETRIEVED]</span><br>
                A **galaxy** is a massive, gravitationally bound system consisting of stars, stellar remnants, an interstellar medium of gas and dust, and **dark matter**.
                <br><br>
                **Scale:** Galaxies can contain hundreds of millions to **trillions of stars** and are the fundamental building blocks of the universe on a large scale.
                <br>
                **Our Galaxy:** Our Sun and its Solar System are part of the **Milky Way Galaxy**, a large barred spiral galaxy.
                <br>
                **Organization:** Galaxies are clustered together in groups, clusters, and superclusters.
            `,
            // Using "space" as a catch-all for general astronomical context
            "space": `
                <span style="color: #ffcc00; font-weight: 700;">[SPACE/SYSTEM CONTEXT RETRIEVED]</span><br>
                The terms relate to different scales of organization in the universe:
                <br>
                A **Planetary System** (or system) is a set of non-stellar bodies gravitationally bound to and in orbit of a star or star system. The Solar System is one example.
                <br><br>
                A **Galaxy** is a massive system containing hundreds of billions to trillions of stars.
                <br>
                An **Exoplanet** is a planet within a planetary system that is *not* our own.
            `,
            "default": "<p style=\"color: #e0e0f0; font-style: italic; margin-top: 0;\">Query not recognized. Please use a keyword (Exoplanet, Solar System, Galaxy, or Space) to access the Knowledge Base.</p>"
        };

        /**
         * Simulates an AI response based on allowed keywords.
         */
        function getAiResponse() {
            const query = aiInput.value.toLowerCase().trim();
            let key = "default";
            
            // Simple keyword matching for the allowed terms
            if (query.includes("exoplanet")) {
                key = "exoplanet";
            } else if (query.includes("solar system") || query.includes("solarsystem")) {
                key = "solar system";
            } else if (query.includes("galaxy")) {
                key = "galaxy";
            } else if (query.includes("space") || query.includes("system") || query.includes("universe")) {
                key = "space";
            }
            
            // Use the stored response, or the default message
            let responseHtml = aiKnowledgeBase[key];

            aiOutput.innerHTML = `
                <p style="font-style: normal; color: #e0e0f0; margin-top: 0; font-size: 0.95em;">
                    ${responseHtml}
                </p>`;
        }
        // --- END AI SIMULATION LOGIC ---


        /**
         * Initializes the dynamic list of planets and attaches handlers.
         */
        function initializePlanetList() {
            planetOrder.forEach(planetName => {
                const li = document.createElement('li');
                li.textContent = planetName;
                const searchableKey = planetName.toLowerCase().replace(/ \(.+\)/, '').trim(); 
                
                li.addEventListener('click', () => {
                    if (currentActiveItem) {
                        currentActiveItem.classList.remove('active');
                    }
                    li.classList.add('active');
                    currentActiveItem = li;
                    renderPlanetDetails(searchableKey);
                });
                listContainer.appendChild(li);
            });
            
            // Attach the filtering logic to the planet list search input
            searchInput.addEventListener('keyup', filterPlanetList);
            
            // Attach the AI response logic to the AI query input
            aiInput.addEventListener('keyup', (event) => {
                // Trigger on Enter key or when enough text is typed
                if (event.key === 'Enter' || event.target.value.length >= 4) {
                    getAiResponse();
                }
            });
            aiInput.addEventListener('change', getAiResponse); // Also run on blur/focus change
        }

        // Run the initialization function when the page loads
        initializePlanetList();

    </script>
</body>
</html>
